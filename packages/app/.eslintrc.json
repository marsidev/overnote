{
  "env": {
    "browser": true,
    "cypress/globals": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "cypress"
  ],
  "rules": {
    "react/prop-types": "off",
    "unknown-at-rule": "off",
    "jsx-quotes": [ "error", "prefer-single" ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}